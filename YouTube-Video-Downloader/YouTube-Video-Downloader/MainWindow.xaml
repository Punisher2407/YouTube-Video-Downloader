        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YouTube_Video_Downloader"
        mc:Ignorable="d"
        Title="Video Downloader" Height="450" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label x:Name="Lbl_URL" Content="URL:" HorizontalAlignment="Left" Margin="33,53,0,0" VerticalAlignment="Top" Height="30" Width="44" FontSize="16"/>
        <TextBox x:Name="TxtBox_URL" HorizontalAlignment="Left" Height="23" Margin="75,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287"/>
        <Button x:Name="Button_Connect" Content="Connect" HorizontalAlignment="Left" Margin="379,59,0,0" VerticalAlignment="Top" Width="75" Click="Button_Connect_Click" Height="23"/>

    </Grid>
</Window>
